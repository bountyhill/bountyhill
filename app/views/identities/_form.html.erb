<fieldset>
  <legend><%= I18n.t(:"signup.bountyhill")%></legend>
  <%= render 'shared/error_messages', :object => @identity, :scope => "signup" %>

  <div class="control-group <%= error_class_for(@identity, :name) %>">
    <%= form.label :name, :class => "control-label" %> 
    <div class="controls">
      <%= form.text_field :name, :class => "input-xlarge" %> 
      <%= error_message_for(@identity, :name) %>
    </div>
  </div>
  
  <div class="control-group <%= error_class_for(@identity, :email) %>">
    <%= form.label :email, :class => "control-label" %> 
    <div class="controls">
      <%= form.text_field :email, :class => "input-xlarge" %>
      <%= error_message_for(@identity, :email) %>
    </div>
  </div>
  
  <div class="control-group <%= error_class_for(@identity, :password) %>">
    <%= form.label :password, :class => "control-label" %> 
    <div class="controls">
      <%= form.password_field :password, :class => "input-xlarge" %>
      <%= error_message_for(@identity, :password) %>
    </div>
  </div>
  
  <div class="control-group <%= error_class_for(@identity, :password_confirmation) %>">
    <%= form.label :password_confirmation, :class => "control-label" %> 
    <div class="controls">
      <%= form.password_field :password_confirmation, :class => "input-xlarge" %>
      <%= error_message_for(@identity, :password_confirmation) %>
    </div>
  </div>
  
  <div class="form-actions">
    <%#= link_to I18n.t(:cancel), root_path, :class => "btn btn-mini" %>
    <%= form.submit I18n.t(:sign_up), :class => "btn btn-primary btn" %>
  </div>
</fieldset>