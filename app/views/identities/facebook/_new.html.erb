<%= form_for(identity, :url => "/auth/facebook/init") do |form| %>
  <% if current_user %>
    <p><%= I18n.t("identity/facebook.form.new.legend") %></p>
  <% else %>
    <p><%= I18n.t("identity/facebook.form.signin.legend") %></p>
  <% end %>

  <%= form.error_messages @error if @error %>
  <%#= hidden_field_tag :req, :facebook %>

  <% unless current_user || returning_user? %>
    <p><%= I18n.t("identity.form.commercial") %></p>
    <%= form.control_group :commercial, :check_box %>
  <% end %>
    
  <% if current_user && !identity_requested?(:facebook) %>
    <%= form.actions "#", :"data-dismiss" => "modal" %>
  <% else %>
    <% unless current_user || returning_user? %>
      <p><%= I18n.t("identity.form.agree_to_terms")%></p>
      <%= form.agree_to_terms(:id => "agree_to_terms_facebook") %>
    <% end %>
    
    <div class="buttons">
      <%= link_to_cancel_signin %>
      <%= form.submit I18n.t("button.signin"),
        :name => "signin_facebook",
        :id => "signin_facebook",
        :class => "btn btn-primary btn-inverse" %>
    </div>
    
    <%= signin_button_toggle_javascript(:facebook) %>
  <% end %>
<% end %>
