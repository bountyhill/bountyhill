<%= form_for(identity, :url => "/auth/xing/init", :remote => true) do |form| %>
  <% if current_user %>
    <p><%= I18n.t("identity/xing.form.new.legend") %></p>
  <% else %>
    <p><%= I18n.t("identity/xing.form.signin.legend") %></p>
  <% end %>

  <%= form.error_messages @error if @error %>
  <%#= hidden_field_tag :req, :xing %>

  <% unless current_user || returning_user? %>
    <p><%= I18n.t("identity.form.commercial") %></p>
    <%= form.control_group :commercial, :check_box %>
  <% end %>

  <% if current_user && !identity_requested?(:xing) %>
    <%= form.actions "#", :"data-dismiss" => "modal" %>
  <% else %>
    <% unless current_user || returning_user? %>
      <p><%= terms_of_use_legend %></p>
      <%= form.control_group :accept_terms, :check_box %>
    <% end %>
    
    <div class="buttons">
      <%= link_to_cancel_signin %>
      <%= form.submit I18n.t("button.signin"), :class => "btn btn-primary btn-inverse" %>
    </div>
  <% end %>
<% end %>
