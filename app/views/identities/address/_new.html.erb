<%= form_for identity, :remote => true do |form| %>
  <p><%= I18n.t("identity/address.form.new.legend")%></p>
  <%= form.error_messages %>

  <%= partial("identities/address/form", :form => form) %>

  <% if current_user && !identity_requested?(:address) %>
    <%= form.actions "#", :"data-dismiss" => "modal" %>
  <% else %>
    <%= form.actions "/sessions/cancel", :label => I18n.t("button.add"), :method => :post %>
  <% end %>
<% end %>
