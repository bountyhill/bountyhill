<%= form_for(identity, :url => "/auth/twitter/init") do |form| %>
  <% if current_user %>
    <p><%= I18n.t("identity/twitter.form.new.legend") %></p>
  <% else %>
    <p><%= I18n.t("identity/twitter.form.signin.legend") %></p>
  <% end %>
  
  <%= form.error_messages @error if @error %>
  <%#= hidden_field_tag :req, :twitter %>

  <% unless current_user || returning_user? %>
    <p><%= I18n.t("identity.form.commercial") %></p>
    <%= form.control_group :commercial, :check_box %>
  <% end %>

  <p><%#= I18n.t("identity/twitter.form.follow_hint") %></p>
  <%#= form.control_group :follow_bountyhermes, :check_box %>

  <% unless current_user || email_given? %>
    <p><%= I18n.t("identity/twitter.form.email_hint") %></p>
    <%= form.control_group :email, :text_field %>
  <% end %>

  <% if current_user && !identity_requested?(:twitter) %>
    <%= form.actions "#", :"data-dismiss" => "modal" %>
  <% else %>
    <% unless current_user || returning_user? %>
      <p><%= I18n.t("identity.form.agree_to_terms")%></p>
      <%= form.agree_to_terms(:id => "agree_to_terms_twitter") %>
    <% end %>

    <div class="buttons">
      <%= link_to_cancel_signin %>
      <%= form.submit I18n.t("button.signin"),
        :name => "signin_twitter",
        :id => "signin_twitter",
        :class => "btn btn-primary btn-inverse" %>
    </div>
    
    <%= signin_button_toggle_javascript(:twitter) %>
  <% end %>
<% end %>
