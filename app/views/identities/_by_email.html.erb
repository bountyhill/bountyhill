<%= form_for @identity, :html => {:class => "form-horizontal"} do |form| %>
  <fieldset>
    <legend><%= I18n.t(:"signup.bountyhill")%></legend>
    <%= render 'shared/error_messages', :object => @identity, :scope => "signup" %>

    <%= form.control_group :name %>
    <%= form.control_group :email %>
    <%= form.control_group :password,               :password_field %>
    <%= form.control_group :password_confirmation,  :password_field %>

    <%= form.agree_to_terms %>

    <div class="form-actions">
      <%= link_to I18n.t(:go_to_signin), :signin %>
      <%= form.submit I18n.t(:sign_up), :class => "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
