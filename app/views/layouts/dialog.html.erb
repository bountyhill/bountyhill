<%- # This layout is used to render the an action into a modal dialog.
-%><%= javascript_include_tag "dialog" %>
<%= 
  if request.xhr? 
    yield
  else
    locals = { 
      :content        => "", #render(:template => "home/index"),
      :modal_content  => yield,
      :extra_script   => "$('#myModal').modal('show'); $('.selectpicker').selectpicker();"
    }

    render :template => 'layouts/application', :locals => locals
  end
%>
