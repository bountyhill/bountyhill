<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to 'bountyhill', root_path, :class => "brand" %>
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div class="nav-collapse">
        <ul class="nav" id="service">
          <% %w(about help quests).each do |nav_item| %>
            <li><%= link_to I18n.t(nav_item), self.send("#{nav_item}_path") %></li>
          <% end %>
        </ul>
        <ul class="nav pull-right">
          <% if signed_in? %>          
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to I18n.t(:profile), current_user %></li>
                <li><%= link_to I18n.t(:settings), '#' %></li>
                <li class="divider"></li>
                <li><%= link_to I18n.t(:sign_out), signout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to I18n.t(:sign_up), signup_path %></li>
            <li><%= link_to I18n.t(:sign_in), signin_path %></li>
          <% end %>      
        </ul>
      </div>
      <form class="navbar-search pull-right">
        <input type="text" placeholder="<%= I18n.t(:"request.text") %>" class="input-xlarge search-query">
      </form>
    </div>
  </div>
</div>
<% flash.each do |key, value| %>
  <div class="flash alert alert-<%= key %>">
    <a class="close" data-dismiss="alert" href="#">Ã—</a>
    <%= value %>
  </div>
<% end %>
