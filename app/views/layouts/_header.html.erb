<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <button type="button" class="btn btn-navbar pull-right" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'bounty<strong>hill</strong>'.html_safe, root_path, :class => "brand" %>
      <form class="navbar-search" action="">
        <input type="text" class="search-query input-xlarge" placeholder="<%= I18n.t(:"search.box.placeholder") %>">
      </form>
      <div class="nav-collapse">
        <ul class="nav">
          <% nav_items.each do |nav_item| %>
            <%= 
              if link = link_to_nav_item(nav_item)
                content_tag :li, link, :class => navigation_item_class_for(nav_item)            
              end
            %>
          <% end %>
          <li class="divider"></li>
        </ul>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="/profile" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to I18n.t(:profile), current_user %></li>
                <li><%= link_to I18n.t(:settings), '#' %></li>
                <li class="divider"></li>
                <li><%= link_to I18n.t(:sign_out), "/signout", method: "delete" %></li>
              </ul>
              <li><%= link_to I18n.t(:sign_out), "/signout", method: "delete" %></li>
            </li>
          <% else %>
            <li><%= link_to I18n.t(:sign_up), "/signup" %></li>
            <li><%= link_to I18n.t(:sign_in), "/signin" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<%= partial "layouts/flash", :flash => flash %>