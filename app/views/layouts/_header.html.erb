<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <button type="button" class="btn btn-navbar pull-right" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'bounty<strong>hill</strong>'.html_safe, root_path, :class => "brand" %>
      <div class="nav-collapse">
        <ul class="nav">
          <% nav_items.each do |nav_item| %>
            <%= 
              if link = link_to_nav_item(nav_item)
                content_tag :li, link, :class => navigation_item_class_for(nav_item)            
              end
            %>
          <% end %>
          <li class="divider"></li>
        </ul>
        <ul class="nav pull-right">
          <% if signed_in? %>
          <li><a href="/profile"><%= current_user.name %></a></li>
          <li><%= link_to I18n.t(:sign_out), "/signout", method: "delete" %></li>
          <% else %>
          <li><%= link_to I18n.t(:sign_up), "/signup" %></li>
          <li><%= link_to I18n.t(:sign_in), "/signin" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<%= partial "layouts/flash", :flash => flash %>