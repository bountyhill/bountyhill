<%= form_for @quest, :id => "quest_form", :url => run_path(@quest), :method => :post do |form| %>
  <fieldset>
    <legend><%= I18n.t(:"runs.legend")%></legend>
    <%= form.error_messages %>

    <%= form.control_group :title, :text_area, :rows => 3 %>
    <%= form.control_group :bounty, :class => "input-xxxsmall", :unit => "EURO" %>
    <%= 
    duration_in_days = @quest.duration_in_days || 7
      form.control_group :duration_in_days do 
        [1, 3, 7, 14].map do |value|
          radio_button = form.radio_button :duration_in_days, value,
            :checked => (duration_in_days == value)
          "<label>#{radio_button}#{value} days</label>"
        end.join
      end
    %>
    <%= form.actions :label => "Start", :cancel_url => quest_path(@quest) %>
  </fieldset>
<% end %>
