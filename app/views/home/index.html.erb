<div class="row-fluid">
  <div class="span12">
    <div class="explanation">
      <% (1..5).each do |index| %>
        <div class="item item<%= index %>">
          <div class="headline"><%= I18n.t("home.explanation.headline#{index}").html_safe %></div>
          <div class="text"><%= I18n.t("home.explanation.text#{index}").html_safe %></div>
          <%= image_tag asset_path("home/key_0#{index}.png") %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="instructions">
      <% (1..3).each do |index| %>
        <div class="item item<%= index %>">
          <div class="headline"><%= I18n.t("home.instructions.headline#{index}") %></div>
          <div class="text">
            <div class="left"><%= I18n.t("home.instructions.text_left#{index}") %></div>
            <div class="right"><%= I18n.t("home.instructions.text_right#{index}") %></div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="claim"><%= I18n.t("home.claim")%></div>
  </div>
</div>
