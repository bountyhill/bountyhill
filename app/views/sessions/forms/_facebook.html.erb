<% accordion_heading(:facebook) do %>
  <%= I18n.t("identity/facebook.form.title")%>
  <%= awesome_icon(:facebook_sign, :size => :large, :class => "pull-right") %>
<% end %>

<% accordion_body(:facebook) do %>
  <%= form_for Identity::Facebook.new, :url => "/sessions/facebook" do |form| %>
    <p><%= I18n.t("identity/facebook.form.legend") %></p>

    <%= hidden_field_tag :req, params[:req] %>
    <%= form.error_messages @error if @error %>

    <div class="checkbox-group">
      <%= form.agree_to_terms(:id => "agree_to_terms_facebook") %>
    </div>

    <div class="buttons">
      <%= link_to_cancel_signin %>
      <%= form.submit I18n.t("button.signin"), :name => "do_signup_facebook", :id => "do_signup_facebook", :class => "btn btn-primary btn-inverse", :disabled => "disabled" %>
    </div>
  <% end %>
<% end %>

<script type="text/javascript" charset="utf-8">
  $("#agree_to_terms_facebook").change(function() {
    if($(this).is(':checked'))
      $("#do_signup_facebook").removeAttr("disabled");
    else
      $("#do_signup_facebook").attr("disabled", "disabled");
  });
</script>