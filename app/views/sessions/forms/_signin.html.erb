<% accordion_heading(:signin) do %>
  <%= I18n.t("identity/email.form.signin.title")%>
  <%= awesome_icon(icon_for('identity.email'), :class => "pull-right") %>
<% end %>

<% accordion_body(:signin) do %>
  <%= form_for (@identity || Identity::Email.new), :url => "/signin", :remote => true, :html => { :id => 'new_signin' } do |form| %>
    <p><%= I18n.t("identity/email.form.signin.legend")%></p>
    <%= form.error_messages @error if @error %>
    <%#= hidden_field_tag :req, params[:req] %>

    <%= form.control_group :email,    :text_field %>
    <%= form.control_group :password, :password_field %>
    <%= form.forgot_password %>

    <div class="buttons">
      <%= link_to_cancel_signin %>
      <%= form.submit I18n.t("button.signin"),  :name => "do_signin", :id => "do_signin", :class => "btn btn-primary btn-inverse" %>
      <%= form.submit I18n.t("button.reset"),   :name => "do_reset",  :id => "do_reset",  :class => "btn btn-primary btn-inverse hide" %>
    </div>
  <% end %>
<% end %>

<script type="text/javascript" charset="utf-8">
  $("#forgot_password").change(function() {
    if($(this).is(':checked')){
      $("#identity_email_password").attr("disabled", "disabled");
      $("#identity_email_password").attr("placeholder", '<%= I18n.t("identity/email.form.field_hint.password_reset") %>');
      $("input[name=do_signin]").toggleClass('hide');
      $("input[name=do_reset]").toggleClass('hide');
    }
    else {
      $("#identity_email_password").removeAttr("disabled");
      $("#identity_email_password").attr("placeholder", '<%= I18n.t("identity/email.form.field_hint.password") %>');
      $("input[name=do_signin]").toggleClass('hide');
      $("input[name=do_reset]").toggleClass('hide');
    }
  });
  <% if @mode.to_sym == :reset %>
    $("#forgot_password").trigger('click')
  <% end %>
</script>
