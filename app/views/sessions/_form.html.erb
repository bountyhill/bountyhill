<fieldset>
  <legend><%= I18n.t(:"signin.bountyhill")%></legend>
  <%= render 'shared/error_messages', :object => nil, :scope => "signin" %>
  
  <div class="control-group <%#= error_class_for(@user, :email) %>">
    <%= form.label :email, :class => "control-label" %> 
    <div class="controls">
      <%= form.text_field :email, :class => "input-xlarge" %>
      <%#= error_message_for(@user, :email) %>
    </div>
  </div>
  
  <div class="control-group <%#= error_class_for(@user, :password) %>">
    <%= form.label :password, :class => "control-label" %> 
    <div class="controls">
      <%= form.password_field :password, :class => "input-xlarge" %>
      <%#= error_message_for(@user, :password) %>
    </div>
  </div>
    
  <div class="form-actions">
    <%#= link_to I18n.t(:cancel), root_path, :class => "btn btn-mini" %>
    <%= form.submit I18n.t(:sign_in), :class => "btn btn-primary btn" %>
  </div>
</fieldset>