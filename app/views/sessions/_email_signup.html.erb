<%= form.control_group :email, :name => "signup[email]" %>
<%= form.control_group :password, :password_field, :name => "signup[password]" %>
<%= form.control_group :password_confirmation, :password_field, :name => "signup[password_confirmation]" %>

<%= form.agree_to_terms! %>

<div class="form-actions">
  <%= link_to_cancel_signin %>
  <%= form.submit I18n.t("sessions.email.signup"), :name => "do_signup", :class => "btn btn-primary" %>
</div>

<script type="text/javascript" charset="utf-8">
  $("#agree_to_terms").change(function() {
    if($(this).is(':checked'))
      $("input[name=do_signup]").removeAttr("disabled");
    else
      $("input[name=do_signup]").attr("disabled", "disabled");
  });
  
  $("input[name=do_signup]").attr("disabled", "disabled");
</script>
