<% if @activities.total_pages > @activities.current_page -%>
$('ul.activities').append('<%= escape_javascript(render(partial: 'list')) %>');
$('a.endless_scroll_hook').attr('href', '<%= activities_path(params.merge(:page => (params[:page].to_i || 1)+1)) %>').show();
<% else -%>
$('a.endless_scroll_hook').hide();
<% end -%>