<div class="image-section">
  <% container.images(:width => 185, :height => 180).each_slice(4).with_index do |image_urls, offset| %>
    <ul class="thumbnails row-fluid">
      <% image_urls.each_with_index do |image_url, index| %>
        <li class="span3">
          <%= link_to(image_tag(image_url, :width => 185, :height => 180),
            "/#{container.class.name.underscore.pluralize}/#{container.id}/lightbox/#{(offset*4)+index}",
            :class => 'thumbnail',
            :remote => true) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
