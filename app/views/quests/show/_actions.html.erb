<ul class="sticker actions">
  <%= render_sticker_note(
    :html_class => "bounty #{bounty_class(@quest)}",
    :count      => quest.bounty.to_s(:cents => false),
    :title      => t("quest.actions.bounty.title"),
    :subtitle   => t("quest.actions.bounty.sub")
  ) %>
  <%= render_sticker_note(
    :count      => quest.criteria.size,
    :title      => t("quest.criteria.title"),
    :subtitle   => t("quest.criteria.sub")
  ) %>
  <%= count, title, subtitle = 
      if    quest.expires_at.blank?     then  [t("quest.expires_at.none.title"),              nil,                          t("quest.expires_at.none.sub")]
      elsif quest.expires_at > Time.now then  [(quest.expires_at.to_date - Date.today).to_i,  t("quest.expires_at.title"),  t("quest.expires_at.sub") ]
      else                                    [(Date.today - quest.expires_at.to_date).to_i,  t("quest.expired_at.title"),  t("quest.expired_at.sub")]
      end
    render_sticker_note(
      :count      => count,
      :title      => title,
      :subtitle   => subtitle
  ) %>
  <% if quest.offers.present? %>
    <%= render_sticker_note(
      :count      => link_to(quest.offers.count, offers_path(:quest_id => quest)),
      :title      => link_to(t('quest.actions.offers.title', :count => quest.offers.count), offers_path(:quest_id => quest)),
      :subtitle   => t("quest.actions.offers.sub")
    ) %>
    <%= 
    render_sticker_note(
      :count      => quest.compliance,
      :title      => t("quest.actions.compliance.title"),
      :subtitle   => t("quest.actions.compliance.sub")
    ) %>
  <% end %>
  <% if (number_of_tweets = quest.number_of_tweets).present? %>
    <%= render_sticker_note(
      :count      => number_of_tweets,
      :title      => t("quest.actions.retweets.title"),
      :subtitle   => t("quest.actions.retweets.sub")
    ) %>
  <% end %>
</ul>
