<div class="inner quest">
  <h2>
    <span class="bounty"><strong><%= quest.bounty.to_s(:cents => false) %></strong> <%=t "quest.actions.bounty.title" %></span>
    <small><%=t "quest.actions.bounty.sub" %></small>
  </h2>
  <%#= 
    action_buttons do |act|
      act.action :t, :"quest.actions.tweet", :url => share_path(quest)
      act.action :h, :"quest.actions.offer", :url => new_offer_path(:quest_id => quest)

      unless (offers_count = quest.offers.count).zero?
        act.action :d, 
          I18n.t("quest.actions.review.title", :count => offers_count), 
          I18n.t("quest.actions.review.sub", :count => offers_count), 
          :url => offers_path(:quest_id => quest)
      end
    end
  %>
</div>

<div class="inner">
  <h2>
    <span><strong><%= quest.criteria.size %></strong> <%=t "quest.criteria.title" , :count => quest.criteria.count %></span> 
    <small><%=t "quest.criteria.sub" %></small>
  </h2>
</div>


<% if quest.offers.present? %>
<div class="inner">
  <h2>
    <%= link_to offers_path(:quest_id => quest) do %>
      <span><strong><%= quest.offers.count %></strong> <%=t "quest.actions.offers.title" %></span>
      <small><%=t "quest.actions.offers.sub" %></small>
    <% end %>
  </h2>
</div>
<div class="inner">
  <h2>
    <span><strong><%= quest.compliance %>%</strong> <%=t "quest.actions.compliance.title" %></span>
    <small><%=t "quest.actions.compliance.sub" %></small>
  </h2>
</div>
<% end %>


<% if (number_of_tweets = quest.number_of_tweets).present? %>
<div class="inner">
  <h2>
    <span><strong><%= number_of_tweets %></strong> <%=t "quest.actions.retweets.title" %></span>
    <small><%=t "quest.actions.retweets.sub" %></small>
  </h2>
</div>
<% end %>

<div class="inner">
  <h2>
    <span>
      <strong><%= quest.comments.count %></strong><%= t "comments.headline", :count => quest.comments.count %>
      <small><%=t "comments.subheadline", :count => quest.comments.count %></small>
    </span> 
  </h2>
</div>

<% if (chain = quest.chain_to(current_user)) && chain.present? %>
<div class="inner">
  <% partial "shared/chain", :quest => quest, :chain => chain %>
</div>
<% end %>
