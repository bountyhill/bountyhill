<% criteria = quest.criteria %>
<div class="inner quest">
  <% if criteria.present? %>
  <h2>
    <span><strong><%= criteria.size %></strong> <%=t "quest.criteria.title" , :count => criteria.count %></span> 
    <small><%=t "quest.criteria.sub" %></small>
  </h2>

  <div class="criteria no-flicker">
    <%= accordion do |acc| %>
      <% criteria.each do |criterium| %>
        <%=
          description = criterium[:description] || I18n.t("quest.criteria.description.none")
          acc.item criterium[:title], description, :collapse => false
        %>
      <% end %>
    <% end %>
  </div>
  <% else %>
  <h2>
    <span><%=t "quest.criteria.none.title" %></span>
    <small><%=t "quest.criteria.none.sub" %></small>
  </h2>
  <% end %>
</div>
