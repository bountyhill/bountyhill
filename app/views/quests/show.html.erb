<div class="row-fluid">
  <div class="span1">&nbsp;</div>
  <div class="main span8">
    <%= user_bar(@quest.owner, :quest) %>
  </div>
  <div class="sidebar span2">&nbsp;</div>
  <div class="span1">&nbsp;</div>
</div>
<%= spacer %>
<div class="row-fluid main">
  <div class="span1">&nbsp;</div>
  <div class="main span8">
    <%= quest_box(@quest, :class => "with-opener") %>
    <% if @quest.offers.for_user(current_user).any? %>
      <a id ='offers'></a>
      <%= spacer %>
      <%= offers_box(@quest, :class => "with-opener") %>
    <% end %>
    <a id ='comments'></a>
    <%= spacer %>
    <%= comments_box(@quest) %>
  </div>
  <div class="sidebar span2">
    <%= quest_statistic_boxes(@quest) %>
  </div>
  <div class="span1">&nbsp;</div>
</div>
