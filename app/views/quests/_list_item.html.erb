<div class="message-container row-fluid">
  <%= link_to quest_path(quest), :class => "message-box span8" do %>
    <div class="message row-fluid">
      <div class="avatar-container span2">
        <%= avatar quest.owner, :size => 96 %>
      </div>
      <div class="text-container span10">
        <div class="message-head row-fluid">
          <div class="owner span6">
            <%= quest.owner.name %>
          </div>
          <div class="time span6">
            <% if quest.active? %>
              <%= I18n.t("quest.list.expiration", :distance_of_time => distance_of_time_in_words_to_now(quest.expires_at)) %>
            <% else %>
              <%= I18n.t("quest.list.creation", :distance_of_time => distance_of_time_in_words_to_now(quest.created_at)) %>
            <% end %>
          </div>
        </div>
        <div class="message-body">
          <%= truncate(quest.title, :length => 200) %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="message-stats span4">
    <%= quest_statistic(quest) %>
    <%= quest_responses(quest) %>
    <%= quest_buttons(quest) %>
  </div>
</div>
