<%= form_for @quest, :html => {:class => "form-horizontal"}, :id => "quest_form" do |form| %>
  <fieldset>
    <legend><%= I18n.t(:"quest.legend")%></legend>
    <%= render 'shared/error_messages', :object => nil, :scope => "quest" %>

    <%= form.control_group :title %>
    <%= form.control_group :description, :text_area, :rows => 5 %>
    <%= form.control_group :bounty %>
    <%= form.control_group :image, :transloadit %>

    <%= 
      if @quest.readonly?
        form.actions :edit => edit_quest_path(@quest), :all => quests_path
      elsif @quest.new_record?
        form.actions :all => quests_path
      else
        form.actions :show => @quest, :all => quests_path
      end
     %>
  </fieldset>
<% end %>

<script type="text/javascript" src="//assets.transloadit.com/js/jquery.transloadit2.js"></script>
<%= transloadit_jquerify :quest_form, :wait => true %>
