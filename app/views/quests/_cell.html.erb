<%
style ||= nil
%>
<div class="inner" style="<%= style %>">
  <div class="quest-cell bg-black no-flicker">
    <%= render_bounty_ribbon quest %>
    <div class="inner">
      <%= avatar quest.owner, :size => 64 %>
      <%= link_to h3(truncate(quest.title, :length => 80)), quest_path(quest) %>
      <div class="restrictions">
        <%= render_restriction quest, :expires_at %>
        <%= render_restriction quest, :location %>
      </div>
      <div class="socialmedia">
        <%= link_to "t", retweet_quest_path(quest), :title => t("quest.actions.tweet.title"), :class => "social-item twitter", :rel => "nofollow" %>
      </div>
    </div>
  </div>
</div>
