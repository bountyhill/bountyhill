<!-- banner-->
<div class="banner">
  <span>
    <h1>
      <%= I18n.t("quests.filter.#{params[:filter] || "all"}.title") %>
      <%= "(%d)" % @quests.total_entries %>
    </h1>
    <small><%= I18n.t "quests.filter.#{params[:filter] || "all"}.sub" %></</small>
  </span>
  <%= link_to I18n.t("quest.new"), new_quest_path, :class => "btn btn-inverse" %>
</div>
<div class="row bg-main" >
  <!-- categories -->
  <div class="span12 bg-black">
    <div class="row">
      <div class="categories">
        <a href="#" title="Category  1" data-bitly-type="bitly_hover_card">a</a>
        <a href="#" title="Category  2" data-bitly-type="bitly_hover_card">b</a>
        <a href="#" title="Category  3" data-bitly-type="bitly_hover_card">c</a>
        <a href="#" title="Category  4" data-bitly-type="bitly_hover_card">d</a>
        <a href="#" title="Category  5" data-bitly-type="bitly_hover_card">e</a>
        <a href="#" title="Category  6" data-bitly-type="bitly_hover_card">f</a>
        <a href="#" title="Category  7" data-bitly-type="bitly_hover_card">g</a>
        <a href="#" title="Category  8" data-bitly-type="bitly_hover_card">h</a>
      </div>
    </div>
  
    <style type="text/css" media="screen">
      a.filter {
        display: inline-block;
        border: 2px solid orange;
        padding: 0 1em;
        font-size: 170%;
        font-weight: bold;
      }
    </style>
    <div class="row" style="padding-left: 6em">
      <% Quest.filters.each do |filter| %>
      <%= link_to I18n.t("quests.filter.#{filter}.title"), quests_path(:filter => filter), :class => "filter" %>
      <% end %>
      
    </div>
  </div>
  
  <!-- tiles -->
  <div class="span12 bg-black">
    <% @quests.each_slice(3) do |slice| %>
    <div class="row">
      <% slice.each do |quest| %>
        <%= render :partial => "cell", :locals => { :quest => quest } %>
      <% end %>
    </div>
    <% end %>
  </div>

  <!-- pagination -->
  <div class="span12 bg-black">
    <div class="pagination pagination-centered inner">
      <%= paginate @quests %>
    </div>
  </div>
</div>
