<%= header_ribbon_button :bubble, t("quest.actions.new.title"), new_quest_path, :text => t("quest.actions.new.sub") %>

<div class="row bg-main">
  <div class="span12 bg-solid-black">
    <div class="quests">

      <%= partial "quests/index/head" %>
      
      <% @quests.each_slice(3) do |slice| %>
      <div class="row quest-cells">
        <% slice.each_with_index do |quest, index|
        style = case index
          when 0 then "margin-left: 20px"
          when 1 then ""
          when 2 then "margin-right: 20px"
          end  %>
        <div class="span4">
          <%= render :partial => "cell", :locals => { :quest => quest, :style => style } %>
        </div>
        <% end %>
      </div>
      <% end %>
      
      <% if pagination = paginate(@quests) %>
        <div class="pagination pagination-centered inner">
          <%= pagination %>
        </div>
      <% end %>
    </div>
  </div>
</div>
