<%= header_ribbon(
  header_button(:bubble, t("quest.actions.new.title"), new_quest_path, :text => t("quest.actions.new.sub")),
  partial("quests/index/head"),
  "&nbsp") %>

<div class="row bg-main">
  <div class="span12">
    <div class="quests">

      <%#= partial "quests/index/head" %>

      <% if quests_for?(current_user) %>
        <%= render :partial => 'quests/list/private' %>
      <% else %>
        <%= render :partial => 'quests/list/public' %>
      <% end %>
      
      <% if pagination = paginate(@quests) %>
        <div class="pagination pagination-centered inner">
          <%= pagination %>
        </div>
      <% end %>
    </div>
  </div>
</div>
