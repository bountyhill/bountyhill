<div class="row-fluid main">
  <div class="span1">&nbsp;</div>
  <div class="sidebar span2">
    <%= avatar @user, :size => 128 %>
  </div>
  <div class="main span7">
    <%= profile_box(@user) %>
  </div>
  <div class="span2">&nbsp;</div>
</div>
<%= spacer %>
<div class="row-fluid">
  <div class="span1">&nbsp;</div>
  <div class="sidebar span2">
    <%= user_statistic_boxes(@user) %>
  </div>
  <div class="main span7">
    <%= activities_box(@user, :per_page => @per_page) if @user == current_user %>
  </div>
  <div class="span2">&nbsp;</div>
</div>
