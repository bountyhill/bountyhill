<div class="row-fluid">
  <div class="span4">
    <div class="inner">
      <%= partial "/users/mini", :user => @user %>
    </div>
  </div>
  <div class="span8" style="height: 180px">
    <div class="inner">
      <h3>
        <strong>Email:</strong>
        <%= @user.email || link_to(I18n.t("profile.add_email"), signin_path(:req => :email)) %>
      </h3>
      <h3>
        <strong>Twitter:</strong>
        <%= @user.twitter_handle || link_to(I18n.t("profile.add_twitter"), signin_path(:req => :twitter)) %>
      </h3>
    </div>
  </div>
</div>

<a name="quests"> </a>
<div class="row">
  <div class="span4" style="height: 180px">
    <div class="inner">
      <h2>Your quests</h2>
      <p>You didn't post any offer yet.</p>
    </div>
  </div>
  <% 10.times do %>
  <div class="span1">
    <div style="height: 120px; border: 3px solid red">
      Quest #<%= rand(1000) %>
    </div>
  </div>
  <% end %>
</div>

<a name="offers"> </a>
<div class="row">
  <div class="span4" style="height: 180px">
    <div class="inner">
      <h2>Your offers</h2>
      <p>You didn't post any offer yet.</p>
    </div>
  </div>
  <% 10.times do %>
  <div class="span1">
    <div style="height: 120px; border: 3px solid red; margin: 5px">
      Offer #<%= rand(1000) %>
    </div>
  </div>
  <% end %>
</div>
