<%= modal_dialog I18n.t("user.form.title") do %>
  <% div :class =>"modal-body" do %>
    <% div :class =>"accordion", :id => "accordion" do %>
      <% @partials.each do |partial, index| %>
        <%= div :class => "accordion-group", :id => partial do %>
          <%= render "users/forms/#{partial}" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
