<div class="bg-gray overlap">
  <div class="row-fluid">
    <div class="span12">
      <div id="twitter" class="home-top">
        <div class="twitter">t</div>
        <p><a href="http://twitter.com">Follow us on twitter</a> and never miss a bounty.</p>
      </div>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="inner">
      <form class="home-search" action="/quests/new" class="inner">
        <input type="text" id="search-query" class="search-query input-xlarge" placeholder="<%= I18n.t(:"home.search.box.placeholder") %>" name="q">
        <input type="submit" value="<%= I18n.t(:"home.search.box.button") %>" name="commit" class="btn btn-inverse btn-large">
      </form>
    
    <script type="text/javascript" charset="utf-8">
    jQuery(function() {
      jQuery("#search-query").focus();
    });
    </script>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="inner">
      <div class="tagline">
        <h1>Bountyhill will change the way you search</h1>
        <p class="claim">
          <span class="reemphasis">
            for a new flat |
            for a new car |
            for a new live |
            for everything
          </span>
          <span class="emphasis">... forever!</span>
        </p>
      </div>
    </div>
  </div>
</div>

