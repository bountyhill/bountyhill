<%= form_for quest, :url => "/share?quest_id=#{quest.id}", :method => :post do |form| %>
  <fieldset>
    <legend><%= I18n.t(:"quest.retweet.legend", :count => Quest::NUMBER_OF_CRITERIA) %></legend>
    <%#= form.error_messages %>

    <%= form.control_group :tweet, :text_area, :rows => 2, :readonly => true %>
    
    <%= form.actions :cancel_url => quest_path(quest), :label => "Retweet" %>
  </fieldset>
<% end %>
